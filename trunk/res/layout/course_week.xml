<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@color/courseweekbgcolor">


	<LinearLayout android:layout_height="41dip"
		android:layout_width="wrap_content" android:id="@+id/linearLayout1"
		android:orientation="horizontal" android:background="@drawable/toolbar">

		<Button android:layout_gravity="center_vertical"
			android:layout_weight="0" android:layout_marginLeft="8dip" 
			android:background="@drawable/toolbar_nav_icon" android:id="@+id/toolbar_nav_button1"
			android:layout_height="28dip" android:layout_width="42dip"></Button>
		<TextView android:layout_gravity="center_vertical"
			android:gravity="center" android:text="2013 年6 月" android:id="@+id/date_textView"
			android:layout_weight="1" android:layout_width="wrap_content" android:textSize="18sp"
			android:textColor="@drawable/white"
			android:layout_height="wrap_content"></TextView>

		<Button android:layout_gravity="center_vertical"
			android:layout_weight="0" android:layout_marginRight="15dip"
			android:layout_width="28dip" android:background="@drawable/toolbar_update_icon"
			android:id="@+id/toolbar_update_button" android:layout_height="28dip"></Button>
	</LinearLayout>
	<LinearLayout android:orientation="horizontal"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:gravity="center_vertical" android:background="#FFFFFF">
		<TextView android:layout_width="wrap_content"
			android:layout_weight="1" android:text="星期一" android:gravity="center"
			android:textSize="12sp" android:textColor="@color/gray"
			android:layout_height="wrap_content"></TextView>

		<TextView android:layout_width="wrap_content"
			android:layout_weight="1" android:text="星期二" android:textSize="12sp"
			android:textColor="@color/gray" android:gravity="center"
			android:layout_height="wrap_content"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_weight="1" android:text="星期三" android:textSize="12sp"
			android:textColor="@color/gray" android:gravity="center"
			android:layout_height="wrap_content"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_weight="1" android:text="星期四" android:textSize="12sp"
			android:textColor="@color/gray" android:gravity="center"
			android:layout_height="wrap_content"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_weight="1" android:text="星期五" android:textSize="12sp"
			android:textColor="@color/gray" android:gravity="center"
			android:layout_height="wrap_content"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_weight="1" android:text="星期六" android:gravity="center"
			android:textSize="12sp" android:textColor="@color/gray"
			android:layout_height="wrap_content"></TextView>
		<TextView android:layout_width="wrap_content"
			android:layout_weight="1" android:text="星期日" android:textSize="12sp"
			android:textColor="@color/gray" android:gravity="center"
			android:layout_height="wrap_content"></TextView>
	</LinearLayout>
	<ViewFlipper android:id="@+id/flipper"
		android:layout_width="fill_parent" android:layout_height="wrap_content">

	</ViewFlipper>
	<RelativeLayout android:layout_height="22dip"
		android:layout_width="fill_parent" android:background="@drawable/event_header_background_today">
		<TextView android:text="今天" android:id="@+id/day_textView"
			android:layout_marginLeft="20dip" android:layout_alignParentLeft="true"
			android:layout_width="wrap_content" android:textSize="12sp" android:layout_centerVertical="true"
			android:layout_height="wrap_content"></TextView>
		<TextView android:text="第15周" android:id="@+id/week_textView" android:layout_centerVertical="true"
			android:layout_alignParentRight="true" android:layout_width="wrap_content"
			android:layout_marginRight="20dip" android:textSize="12sp"
			android:layout_height="wrap_content"></TextView>
	</RelativeLayout>
<ListView android:dividerHeight="1dip"
				android:divider="#00000000"  android:listSelector="#00000000"
				 android:cacheColorHint="#00000000" 
				android:layout_height="wrap_content" android:layout_width="wrap_content"
				android:id="@+id/course_ListView"></ListView>
</LinearLayout>
