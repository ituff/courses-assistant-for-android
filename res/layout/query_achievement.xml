<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:background="@drawable/evaluation_bg" android:layout_height="fill_parent">


	<RelativeLayout 
		android:layout_height="41dip" android:layout_width="fill_parent"
		android:id="@+id/RLayout1" android:orientation="horizontal"
		android:background="@drawable/toolbar">

		<Button android:layout_alignParentLeft="true"
			android:layout_marginLeft="8dip" android:layout_centerVertical="true"
			android:background="@drawable/toolbar_nav_icon" android:id="@+id/toolbar_nav_button"
			android:layout_height="28dip" android:layout_width="42dip"></Button>
		<TextView android:layout_centerInParent="true" android:textSize="18sp" android:textColor="@drawable/white"
			android:gravity="center" android:text="学年/学期" android:id="@+id/term_textView"
			android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>

	</RelativeLayout>
	<ListView android:dividerHeight="0dip" android:divider="#00000000"
		android:cacheColorHint="#00000000" android:layout_height="wrap_content"
		android:layout_width="wrap_content" android:id="@+id/achievement_ListView"></ListView>
</LinearLayout>
